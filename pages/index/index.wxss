page{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.navbar{
  flex: none;
  display: flex;
  font-size: 35rpx;
  background: #3CA0DC;
  color: white;
}

.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active{
  color: #fff;
  font-weight: bold;
  font-size: 38rpx;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  margin: 0rpx 35rpx 8rpx;
  bottom: 0;
  left: 0;
  right: 0;
  height: 5rpx;
  opacity: 0.7;
  border-radius: 10%;
  background: #fff;
}

